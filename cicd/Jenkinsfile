pipeline{
    agent any

    environment {
        DOCKERHUB_CREDS = credentials("dockerhub")
        IMAGE_NAME = 'firthunands90/montinorearrecursoslinux'
        GIT_REPO = 'https://github.com/fernandogonzalez90/MonitorearRecursosLinux.git'
        GIT_BRANCH = 'main'
    }

    stages{
        stage('Clonar Repositorio'){
            steps{
                git branch: 'main', url: 'https://github.com/fernandogonzalez90/MonitorearRecursosLinux.git'
            }
        }

        stage('Build Docker Image'){
            steps{
                script {
                    writeFile file: 'Dockerfile', text:'''
                    FROM python:3.10-alpine  
                    WORKDIR /app
                    COPY . /app
                    RUN apk add --no-cache gcc musl-dev python3-dev libffi-dev
                    RUN pip install --no-cache-dir -r requierements.txt
                    '''
                    sh "echo Compilando Docker"
                    sh "docker build -t ${env.IMAGE_NAME}:${BUILD_NUMBER} ."
                }
            }
        }
        
        stage('Push Docker Image'){
            steps{
                    sh 'echo ${DOCKERHUB_CREDS_PSW} | docker login -u ${DOCKERHUB_CREDS_USR} --password-stdin'
                    sh "docker tag ${env.IMAGE_NAME}:${BUILD_NUMBER} ${env.IMAGE_NAME}:${BUILD_NUMBER}"
                }
            }
        }

        post{
            always {
                echo "Limpiando"
                sh "docker system prune -f"
            }
            success {
                echo "Success !"
            }

            failure {
                echo "Fail !"
            }
        }

    }

    

